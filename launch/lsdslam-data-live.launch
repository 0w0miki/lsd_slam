<launch>
  <arg name="bag" default="/media/yuki0w0/文件/工作/SLAM/lsdslam/LSD_room.bag" />
  <arg name="calibration_file" default="/media/yuki0w0/文件/工作/SLAM/lsdslam/LSD_room_images/LSD_room/cameraCalibration.cfg" />
  <node name="viewer" pkg="lsd_slam_viewer" type="viewer" output="screen" />
  <node name="lsd_slam" pkg="lsd_slam_core" type="live_slam" output="screen">
    <!-- <param name="image" value="path_to_dataset"/> -->
    <!-- <param name="calib" value="arg calibration_file" /> -->
    <remap from="image" to="/image_raw" />
    <param name="calib" value="$(arg calibration_file)" />
  </node>
  <node name="player" pkg="rosbag" type="play" output="screen" args="$(arg bag)" />
  <node pkg="nodelet" type="nodelet" name="nodelet_manager"  args="manager"/>>
	<!-- LSD SLAM -> PCL pointcloud converstion -->
	<node pkg="nodelet" type="nodelet" name="lsd_slam_to_pcl" args="load LSDSLAMToPCLNodelet nodelet_manager" output="screen">
	     <remap from="~input" to="/lsd_slam/keyframes"/>
	</node>
</launch>